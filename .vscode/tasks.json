{
    "version": "2.0.0",
    "tasks": [
        // --- Build Tasks ---
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "bin/unostat.exe",
                // Adjusted path since we moved main.go directly to cmd/
                "./cmd"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "silent"
            }
        },
        // --- Test Tasks ---
        {
            "label": "test:all",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "-race",
                "./..."
            ],
            "group": "test",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test:coverage",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "-coverprofile=coverage.out",
                "./..."
            ],
            "group": "test",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test:coverage-html",
            "type": "shell",
            "command": "go tool cover -html=coverage.out",
            "dependsOn": "test:coverage",
            "problemMatcher": []
        },
        // --- Maintenance ---
        {
            "label": "mod:tidy",
            "type": "shell",
            "command": "go",
            "args": [
                "mod",
                "tidy"
            ],
            "problemMatcher": []
        },
        {
            "label": "mod:vendor",
            "type": "shell",
            "command": "go",
            "args": [
                "mod",
                "vendor"
            ],
            "problemMatcher": []
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "go",
            "args": [
                "generate",
                "./..."
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "golangci-lint",
            "args": [
                "run"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "bin/",
                "coverage.out"
            ],
            "windows": {
                "command": "Remove-Item -Recurse -Force 'bin', 'coverage.out' -ErrorAction Ignore; if ($?) { exit 0 } else { exit 0 }",
                "args": []
            },
            "problemMatcher": []
        }
    ]
}
